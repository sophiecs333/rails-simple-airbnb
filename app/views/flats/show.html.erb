<h1>Details of this flat!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Price per night</th>
      <th>Number of guests</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @flat.name %></td>
        <td><%= @flat.address %></td>
        <td><%= @flat.description %></td>
        <td><%= @flat.price_per_night %></td>
        <td><%= @flat.number_of_guests %></td>
        <td><%= link_to 'Show', @flat %></td>
      </tr>
  </tbody>
</table>
